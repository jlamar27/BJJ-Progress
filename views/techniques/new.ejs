<%- include('../partials/header') %>

<h1>Create New Technique</h1>

<form action="/techniques" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />
  </div>
  <div>
    <label for="position">Position:</label>
    <input type="text" id="position" name="position" />
  </div>
  <div>
    <label for="isSubmission">Is Submission:</label>
    <input type="checkbox" id="isSubmission" name="isSubmission" value="true">
  </div>
  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea>
  </div>
  <div>
    <button type="submit">Create Technique</button>
  </div>
</form>

<%- include('../partials/footer') %>
